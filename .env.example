# Application
PROJECT_NAME="Task Service"
VERSION="1.0.0"
API_V1_PREFIX="/api/v1"

# Logging
LOG_LEVEL=INFO

# PostgreSQL
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=taskdb

# PostgreSQL Pool
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_RECYCLE=3600

# RabbitMQ
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=your_password
RABBITMQ_QUEUE=tasks

# Worker Settings
WORKER_CONCURRENCY=3
WORKER_MAX_RETRIES=3

# CORS
CORS_ORIGINS=["*"]

# Features
ENABLE_METRICS=true